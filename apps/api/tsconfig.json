{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@prisma/*": ["src/prisma/*"],
      "@acme/shared-dto": ["../../packages/shared-dto/src"],
      "@acme/shared-dto/*": ["../../packages/shared-dto/src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../../packages/shared-dto" }]
}

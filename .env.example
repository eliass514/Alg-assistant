# Shared environment configuration for the monorepo
# Copy this file to `.env` and adjust values per-app as needed.
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# PostgreSQL (development)
POSTGRES_USER=acme
POSTGRES_PASSWORD=acme123
POSTGRES_DB=acme_dev
POSTGRES_PORT=5432
DATABASE_URL=postgresql://acme:acme123@localhost:5432/acme_dev

# PostgreSQL (test)
POSTGRES_TEST_USER=acme
POSTGRES_TEST_PASSWORD=acme123
POSTGRES_TEST_DB=acme_test
POSTGRES_TEST_PORT=5433
TEST_DATABASE_URL=postgresql://acme:acme123@localhost:5433/acme_test

# Authentication
JWT_ACCESS_TOKEN_SECRET=change-me-access
JWT_ACCESS_TOKEN_EXPIRES_IN=900
JWT_REFRESH_TOKEN_SECRET=change-me-refresh
JWT_REFRESH_TOKEN_EXPIRES_IN=604800
JWT_AUDIENCE=acme.api
JWT_ISSUER=acme.api
BCRYPT_SALT_ROUNDS=10
DEFAULT_USER_ROLE=client

# AWS S3 Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=false
S3_PRESIGNED_URL_EXPIRATION=3600

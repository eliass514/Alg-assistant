{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**", "out/**"],
      "inputs": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "next.config.*",
        "tailwind.config.*",
        "postcss.config.*",
        "next-intl.config.*"
      ]
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**/*", "tsconfig.json", "package.json", ".eslintrc.*", "eslint.config.*"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "inputs": ["tsconfig.json", "src/**/*", "package.json", "next.config.*", "tailwind.config.*"]
    },
    "test": {
      "dependsOn": ["^test", "^build"],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
